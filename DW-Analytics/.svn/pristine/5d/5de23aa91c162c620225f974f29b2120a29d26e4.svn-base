/* GENERAL */
html {
  height: 100%;
  box-sizing: border-box;
}

*,
*:before,
*:after {
  box-sizing: inherit;
}
body {
  position: relative;
  margin: 0;
  padding-bottom: 6rem;
  min-height: 100%;
  font-family:  "Source Sans Pro";
}
.ssp-title {
	background: rgb(250,250,250);
	border-bottom: 1px solid #eee; 
	margin-bottom: 20px;
	min-height: 90px;
}
.ssp-title > table > tr > td > h3 {
	padding-top: 0px;
	padding-bottom: 0px;
	margin-top: 0px;
	margin-bottom: 0px;
}
.content-header {
	padding-bottom: 25px;
	text-align: center;
}
.content-wrapper {
	background: #fff;
}
.container {
	/* padding-top: 50px; */
}
i.align {
    margin-left: 10px;
    font-size: 30px;
    height: 30px;
    vertical-align: middle;
}
i.m-red {
	color: #ea4335;
}
i.m-blue {
	color: #00a1f1;
}
i.m-yellow {
	color: #ffbb00;
}
i.m-green {
	color: #34a853;
}
i.m-orange {
	color: #f65314;
}
.ssp-options > div > h4 {
	margin-bottom: 25px;
}
.m-width {
	min-width: 250px;
}
.box-custom {
	border: 1px solid #00BCD4;
}
.box-header {
	background: #00BCD4;
	color: #fff;
}
.btn-custom {
	background: #00BCD4;
	border: 1px solid #00BCD4;
	color: #fff;
}
.btn-custom:hover {
	background: #008395;
	border: 1px solid #008395;
}
/* NAVIGATION */
.navbar {
	padding: 3px 0;
}
.navbar-brand {
	position: relative;
	top: -12px;
	padding-right: 25px;
}

.navbar ul li a {
	font-size: 15px;
}
li.dropdown.user.user-menu {
	height: 100%;
}
/*  */
#testing {
    display:    none;
    height:     100%;
    width:      100%;
    background: url('../img/beep_load.gif')
    			50%
                no-repeat;
}
.loading {
	display: block !important;
}
